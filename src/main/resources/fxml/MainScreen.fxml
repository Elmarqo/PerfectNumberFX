            <children>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <Label fx:id="numberLabel" prefHeight="60.0" textFill="#eeebeb"/>
                    </children>
                    <VBox.margin>
                        <Insets top="75.0"/>
                    </VBox.margin>
                </HBox>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
                    <children>
                        <Label fx:id="labelInfoPerfect" prefHeight="60.0" styleClass="perfLabel" textFill="#eeebeb">
                            <graphic>
                                <ImageView fx:id="bell" fitHeight="33.0" fitWidth="44.0" pickOnBounds="true"
                                           preserveRatio="true">
                                    <image>
                                        <Image url="@../icons/notification.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Label>
                    </children>
                    <VBox.margin>
                        <Insets top="40.0"/>
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
        <Label fx:id="dummyLabel" layoutX="511.0" layoutY="359.0" prefHeight="10.0" prefWidth="10.0" text="Label"/>
    </children>
