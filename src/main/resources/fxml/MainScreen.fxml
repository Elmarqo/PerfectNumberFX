              prefHeight="500.0" prefWidth="70.0" spacing="20.0" styleClass="sidebar" AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <HBox fx:id="startButton" alignment="CENTER" onMouseClicked="#start" onMouseDragged="#start"
                      prefHeight="100.0" prefWidth="200.0" styleClass="buttons">
                    <children>
                        <ImageView fitHeight="27.0" fitWidth="36.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../icons/music-player-play.png"/>
                            </image>
                        </ImageView>
                    </children>
                </HBox>
                <HBox alignment="CENTER" layoutX="10.0" layoutY="110.0" onMouseClicked="#showList" prefHeight="100.0"
                      prefWidth="200.0" styleClass="buttons">
                    <children>
                        <ImageView fitHeight="30.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../icons/clipboards.png"/>
                            </image>
                        </ImageView>
                    </children>
                </HBox>
                <HBox fx:id="exitID" alignment="CENTER" layoutX="10.0" layoutY="210.0" onMouseClicked="#exit"
                      prefHeight="100.0" prefWidth="200.0" styleClass="buttons">
                    <children>
                        <ImageView fitHeight="27.0" fitWidth="36.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../icons/power-button-off.png"/>
                            </image>
                        </ImageView>
